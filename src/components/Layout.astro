---
const { title = "Litia", description = "On-device, privacy-first early literacy activities with eye tracking and text-to-speech." } = Astro.props;
const path = Astro.url.pathname;
const isActive = (href) => (path === href ? "active" : "");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" href={`${Astro.site}${Astro.base}/favicon.svg`} />
  </head>
  <body>
    <header class="site">
      <div class="container">
        <div class="navbar">
          <a class="brand" href={`${Astro.base}/`}>
            <span class="badge" aria-hidden="true"></span>
            <span>Litia</span>
          </a>

          <nav class="navlinks" aria-label="Primary navigation">
            <nav>
            <a href="/">Home</a>
            <a href="/research">Research</a>
            <a href="/educators">Educators</a>
            <a href="/contact">Contact</a>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        Â© {new Date().getFullYear()} Litia. Privacy-first, on-device learning.
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
